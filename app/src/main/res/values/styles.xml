<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCornersImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ButtonShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ListTextAppearance.Character" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/rowdies_light</item>
    </style>

    <style name="ListTextAppearance.Character.Name">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListTextAppearance.Character.Status">
        <item name="android:textColor">@color/blue_gray_400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ListTextAppearance.Character.Error">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_800</item>
    </style>

    <style name="RickAndMortyButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="RickAndMortyButtons.Retry" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">@font/rowdies_light</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:fontFamily">@font/rowdies_light</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="CharacterDetails.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rowdies_light</item>
    </style>

    <style name="CharacterDetails.TextAppearance.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="CharacterDetails.TextAppearance.Content">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue_gray_400</item>
    </style>


    <style name="CharacterDetails.TextView" parent="Widget.AppCompat.TextView">

    </style>

    <style name="CharacterDetails.TextView.Header">
        <item name="android:background">@drawable/rectangle_shape</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="CharacterEpisodes.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/rowdies_light</item>
    </style>

    <style name="CharacterEpisodes.TextAppearance.Name">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>

    <style name="CharacterEpisodes.TextAppearance.AirDate">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_gray_400</item>
    </style>

    <style name="CharacterDetails.Button.ShowEpisodes" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ButtonShapeAppearance</item>
    </style>

</resources>