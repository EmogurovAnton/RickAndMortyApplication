<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp">

    <ProgressBar
        android:id="@+id/load_state_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progress_bar" />

    <TextView
        android:id="@+id/load_state_text_no_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_to_load_results"
        android:textAppearance="@style/ListTextAppearance.Character.Error" />

    <Button
        android:id="@+id/load_state_button_retry"
        style="@style/RickAndMortyButtons.Retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retry" />

</LinearLayout>